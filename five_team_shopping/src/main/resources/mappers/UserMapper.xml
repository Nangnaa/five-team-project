<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.springboot.security.domain.user.UserRepository">
	<select id="mSignin" resultType="com.springboot.security.domain.user.User">
		select
			*
		from 
			table_user
		where
		<if test='user_id.equals("manager") and user_password.equals("1234")'>
			user_id = #{user_id}
			and
			user_password = #{user_password}
		</if>
	</select>
</mapper>













